---
import Navigation from '../components/Navigation.astro'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import BaseLayout from '../layouts/BaseLayout.astro'

const { pageTitle } = Astro.props;

const identity = {
    firstName: "Nikos",
    country: "Greece",
    occupation: "Data Scientist",
    hobbies: ["tennis", "sailing", "soccer"]
}

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro"]

const happy = true;
const finished = true;
const goal = 4;

const skillColor = "crimson";
---

<BaseLayout pageTitle={pageTitle}>
    <style is:global define:vars={{skillColor}}>
        h1 {
            color: purple;
            font-size: 4rem;
        }
        .skill {
            color: var(--skillColor);
            font-weight: bold;
        }
    </style>

    <h1>{pageTitle}</h1>
    <h2>... and my new Astro site!</h2>

    <p>Here are a few facts about me</p>
    <ul>
       <li>My name is {identity.firstName}.</li>
    <li>I live in {identity.country} and I work as a {identity.occupation}.</li>
    {identity.hobbies.length >= 2 &&
        <li>Two of my hobbies are: {identity.hobbies[0]} and {identity.hobbies[1]}</li>
    }
    </ul>
    <p> My skills are:</p>
    <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
    </ul>

    {happy && <p>I am happy to be learning Astro!</p>}
    <!-- This will not be displayed as finished equates to false -->
    {finished && <p>I finished this tutorial.</p>}

    {goal === 3 ? <p>My goal is to finish in 3 days.</p> : <p>Aaaand it's done.</p>}


</BaseLayout>
